# Contributor: IoTech <support@iotechsys.com>
# Maintainer: IoTech <support@iotechsys.com>
pkgname=libcbor
pkgver="$VER"
pkgrel=0
pkgdesc="Libcbor for alpine"
url="www.iotechsys.com"
arch="$ARCH"
license="Apache-2.0"
depends=""
install=""
source="libcbor-$VER-Linux.tar.gz"
builddir="$srcdir/"
options="!check !strip !tracedeps"

package() {
    cd "$builddir"
    mkdir -p "$pkgdir"/usr/
    cp -r libcbor-$VER-Linux/lib* "$pkgdir"/usr/local/
    chmod 755 "$pkgdir"/usr/
    mkdir -p "$pkgdir"/usr/include/cbor/internal/
    cp -r libcbor-$VER-Linux/include/* "$pkgdir"/usr/include/
}
 
